@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<!-- Contenedor principal -->
<div class="main-content">
    <!-- Caja azul con la imagen -->
    <div class="banner-container">
        <div class="image-box">
            <img src="~/img/heromedicbanner.jpg" alt="Imagen médica" class="content-image">
        </div>

        <!-- Capa superior en forma de gota -->
        <div class="drop-overlay"></div>
    </div>

    <!-- Sección de texto con tres sub-divs -->
    <div class="content-box">
        <div class="text-row">
            <div class="text-block">Texto 1</div>
            <div class="text-block">Texto 2</div>
        </div>
        <div class="text-block large">Texto 3 - Descripción más extensa</div>
    </div>
</div>
