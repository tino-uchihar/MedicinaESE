@page
@model Medicinaese.Pages.admin_mainModel
@{
    ViewData["Title"] = "Panel de Administración";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Panel de Administración</h1>
    <p class="text-center">Selecciona una opción para gestionar el sistema.</p>

    <div class="row">
        <div class="col-md-4">
            <a href="/Admin/Usuarios" class="btn btn-primary btn-block p-3">Ver lista de usuarios</a>
        </div>
        <div class="col-md-4">
            <a href="/Admin/CrearUsuario" class="btn btn-success btn-block p-3">Crear usuario</a>
        </div>
        <div class="col-md-4">
            <a href="/Admin/Horarios" class="btn btn-warning btn-block p-3">Administrar horarios</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <a href="/Admin/Reportes" class="btn btn-info btn-block p-3">Ver reportes</a>
        </div>
        <div class="col-md-4">
            <a href="/Admin/Configuracion" class="btn btn-secondary btn-block p-3">Configuración</a>
        </div>
        <div class="col-md-4">
            <a href="/Admin/Salir" class="btn btn-danger btn-block p-3">Cerrar sesión</a>
        </div>
    </div>
</div>
