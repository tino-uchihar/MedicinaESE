<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoctorNow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicinaESE.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="container-fluid custom-header py-3">
        <div class="container">
            <div class="row align-items-center">
                <!-- Logo y nombre (3 columnas) -->
                <div class="col-3">
                    <a href="#" class="d-flex align-items-center text-decoration-none">
                        <img src="~/img/logosinfondo2.png" alt="Logo" class="me-2" width="50">
                        <span class="fw-bold fs-5">ESE Barrancabermeja</span>
                    </a>
                </div>

                <!-- Botones de navegación (6 columnas) -->
                <div class="col-6 text-center">
                    <nav>
                        <a href="#" class="btn btn-nav mx-2">Inicio</a>
                        <a href="#" class="btn btn-nav mx-2">Acerca de</a>
                        <a href="#" class="btn btn-nav mx-2">Contacto</a>
                    </nav>
                </div>

                <!-- Inicio de sesión (3 columnas) -->
                <div class="col-3 text-end">
                    <a href="#" class="btn btn-login">Iniciar sesión</a>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - MedicinaESE - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
