@page
@model MedicinaESE.Pages.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card text-center border-0 shadow-lg p-4 rounded-custom" style="width: 40rem; background-color: #037381;">
        <div class="card-header bg-transparent border-0">
            <img src="~/img/logosinfondo2.png" alt="Logo Doctor" class="avatar img-fluid mx-auto d-block mb-4" style="width: 100px;">
            <h2 class="text-white">Iniciar Sesión</h2>
        </div>
        <div class="card-body py-4">
            <form method="post">
                <div class="mb-4">
                    <input type="number" class="form-control w-85 mx-auto py-3" id="documento" name="Documento"
                           placeholder="Documento de identidad" required min="1000" style="border-color: #02c39a; font-size: 1rem;">
                </div>
                <div class="mb-4">
                    <input type="password" class="form-control w-85 mx-auto py-3" id="password" name="Contraseña"
                           placeholder="Contraseña" required minlength="8" style="border-color: #02c39a; font-size: 1rem;">
                </div>

                @if (TempData["IntentosRestantes"] is int intentos && intentos <= 5 && intentos > 0)
                {
                    <p class="text-warning">⚠ Te quedan @intentos intentos.</p>
                }

                <button type="submit" class="btn btn-login-custom w-85 mx-auto py-3">Iniciar Sesión</button>
                <small class="d-block mt-3 text-white">¿Olvidaste tu contraseña? <a href="#" class="text-warning text-decoration-none">Recupérala aquí</a></small>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const mensaje = '@(TempData["Mensaje"] ?? "")';
        const redireccion = '@(TempData["Redireccion"] ?? "")';

        if (mensaje === "success") {
            Swal.fire({
                title: '¡Acceso permitido!',
                text: 'Bienvenido al sistema.',
                icon: 'success',
                confirmButtonText: 'Aceptar'
            }).then(() => {
                window.location.href = redireccion;
            });
        } else if (mensaje === "usuarioNoEncontrado") {
            Swal.fire({
                title: 'Usuario no encontrado',
                text: 'No hay un usuario registrado con ese documento.',
                icon: 'question',
                confirmButtonText: 'Reintentar'
            });
        } else if (mensaje === "contraIncorrecta") {
            Swal.fire({
                title: 'Contraseña incorrecta',
                text: 'La contraseña ingresada no es correcta.',
                icon: 'error',
                confirmButtonText: 'Intentar de nuevo'
            });
        } else if (mensaje === "bloqueado") {
            Swal.fire({
                title: 'Demasiados intentos',
                text: 'Has superado el límite de intentos fallidos. Intenta más tarde.',
                icon: 'warning',
                confirmButtonText: 'Aceptar'
            }).then(() => {
                window.location.href = "/ErrorBD";
            });
        }
    </script>
}
